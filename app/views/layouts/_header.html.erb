<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("static_pages.project_name"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("static_pages.home"), root_path %></li>
        <% if user_signed_in? %>
          <% if current_user.is_admin %>
            <li><%= link_to t("static_pages.manage_exams"), admin_exams_path %></li>
            <li><%= link_to t("static_pages.manage_question"), admin_questions_path %></li>
          <% else %>
            <li><%= link_to t("static_pages.suggest_question"), new_question_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "static_pages.account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("static_pages.settings"), edit_user_registration_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("static_pages.logout"), destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("static_pages.login"), new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
