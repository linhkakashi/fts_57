<% provide :title, t("title.create_subject") %>
<h1><%= t "title.create_subject" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @subject] do |f| %>
      <%= render "shared/error_messages", object: @subject %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.submit t("form.create"), class: "btn btn-primary margin-t-10" %>
    <% end %>
  </div>
</div>
