<div class="col-md-12">
  <%= f.label :answers, t("questions.answer") %>
  <hr>
</div>

<div class="form-group">
  <%= f.fields_for :answers do |answer| %>
    <div class="nested-fields">
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-5">
            <%= answer.text_field :content, class: "form-control answer_form" %>
          </div>
          <%= answer.hidden_field :is_correct, value: true %>
          <%= answer.hidden_field :_destroy, value: false %>
        </div>
      </div>
    </div>
  <% end %>
</div>
